<!DOCTYPE html>
<html>

<head>
  <title>AOC - Sansaru</title>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <!-- Scrollbar Custom CSS -->
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <%= render 'layouts/header' %>
  <% if notice %>
    <p class="alert text-center alert-success">
      <%= notice %>
    </p>
  <% end %>
  <% if alert %>
    <p class="alert text-center alert-danger">
      <%= alert %>
    </p>
  <% end %>
  <%= yield %>
  <%= debug(params) if Rails.env.development? %>
  <%= ".................." if Rails.env.development? %>
  <%= ENV['SMTP_ADDR'] if Rails.env.development? %>
  <%= ENV['MAIL_DOMAIN'] if Rails.env.development? %>
  <%= ENV['MAIL_PASSWORD'] if Rails.env.development? %>
  <%= ENV['MAIL_USERNAME'] if Rails.env.development? %>
  <%= ".................." if Rails.env.development? %>
  <%= render 'layouts/footer' %>
</body>

</html>