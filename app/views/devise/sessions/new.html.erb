<div id="login" class="access-section">
  <div class="title-element">
    <p>¿Te gustaría participar de este gran encuentro?</p> 
    <h1>¡Postúlate!</h1>
  </div>
  <div class="inner-title-element">
    <p>Para hacerlo necesitas</p> 
    <h1>Entrar a tu perfil</h1>
  </div>

  <div class="align-items-center">
    <div class="col-md-8 offset-md-4">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <fieldset>
          <div class="form-group">
            <label class="col-md-6 control-label" for="textinput">
              <%= f.label :email, "E-mail" %>
            </label>
            <div class="col-md-6">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control input-md' %>
            </div>

            <div class="form-group">
              <label class="col-md-6 control-label" for="textinput">
                <%= f.label :password, "Contraseña" %>
              </label>
              <div class="col-md-6">
                <%= f.password_field :password, class: 'form-control input-md' %>
              </div>
            </div>

            <div class="form-group">
              <label class="col-md-6 control-label" for="textinput">
                <%= f.label :actual_event, "Selecciona un evento" %>
              </label>
              <div class="col-md-6">
                <%= f.select(:actual_event_id, Event.where.not(status: :finalizado.to_s).collect {|a| [a.fullname, a.id]},{},{id: :actual_event_id, class: 'custom-select'}) -%>
              </div>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="form-group">
                <label class="col-md-6 control-label" for="textinput">
                  <%= f.check_box :remember_me %>
                  Recuerdame
                </label>
              </div>
            <% end -%>

            <!-- Button -->
            <div class="form-group">
              <div class="col-md-6 text-center">
                <%= f.submit "Entrar", class: "btn btn-primary" %>
              </div>
            </div>
          </div>
        </fieldset>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>