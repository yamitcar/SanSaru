<div class="row align-items-center">
  <div class="col-md-4 offset-md-4">
    <h2>Log in</h2>
  </div>
</div>
<div class="row align-items-center">
  <div class="col-md-12 offset-md-4">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <fieldset>
      <div class="form-group">
        <label class="col-md-4 control-label" for="textinput">
          <%= f.label :email, "Email" %>
        </label>
        <div class="col-md-4">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control input-md' %>
        </div>

        <div class="form-group">
          <label class="col-md-4 control-label" for="textinput">
            <%= f.label :password, "Password" %>
          </label>
          <div class="col-md-4">
            <%= f.password_field :password, class: 'form-control input-md' %>
          </div>
        </div>


        <div class="form-group">
          <label class="col-md-4 control-label" for="textinput">
            <%= f.label :actual_event, "Selecciona un evento" %>
          </label>
          <div class="col-md-4">
            <%= f.select(:actual_event_id, Event.where.not(status: :finalizado.to_s).collect {|a| [a.fullname, a.id]},{},{id: :actual_event_id, class: 'custom-select'}) -%>
          </div>
        </div>


        <% if devise_mapping.rememberable? -%>

          <div class="form-group">
            <label class="col-md-4 control-label" for="textinput">
              <%= f.check_box :remember_me %>
              Recuerdame
            </label>
          </div>
        <% end -%>

        <!-- Button -->
        <div class="form-group">
          <div class="col-md-4">
            <%= f.submit "Log in", class: "btn btn-primary" %>
          </div>
        </div>
      </div>
      </fieldset>
<% end %>

<%= render "devise/shared/links" %>

  </div>
</div>