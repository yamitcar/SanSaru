<div class="row align-items-center">
    <div class="col-md-4 offset-md-4">
<h2>Regístrate</h2>
    </div>
</div>
<div class="row align-items-center">
    <div class="col-md-12 offset-md-4">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

    <fieldset>
       <div class="form-group">
        <label class="col-md-4 control-label" for="textinput">
          <%= f.label :email, "Email" %>
        </label>
        <div class="col-md-4">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control input-md' %>
        </div>
       </div>

      <div class="form-group">
        <label class="col-md-4 control-label" for="textinput">
          <%= f.label :name, "Nombres" %>
        </label>
        <div class="col-md-4">
          <%= f.text_field :name, class: 'form-control input-md' %>
        </div>

      </div>

      <div class="form-group">
        <label class="col-md-4 control-label" for="textinput">
          <%= f.label :lastname, "Apellidos" %>
        </label>
        <div class="col-md-4">
          <%= f.text_field :lastname, class: 'form-control input-md' %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-md-4 control-label" for="textinput">
          <%= f.label :password %>
            <% if @minimum_password_length %>
          <em>(
            <%= @minimum_password_length %> carácteres mínimo)</em>
          <% end %>
        </label>
            <div class="col-md-4">
              <%= f.password_field :password, class: 'form-control input-md' %>
            </div>
      </div>

      <div class="form-group">
        <label class="col-md-4 control-label" for="textinput">
          <%= f.label :password_confirmation, "Confirmación" %>
        </label>
        <div class="col-md-4">
          <%= f.password_field :password_confirmation, class: 'form-control input-md' %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-md-4 control-label" for="textinput">
          <%= f.check_box :terms_of_service %>
          ¿Aceptas nuestros <a href="/terms" target="_blank">términos de servicio </a>y nuestro
          <a href="/privacidad" target="_blank">acuerdo de privacidad</a>?
          </label>
        </div>

      <!-- Button -->
      <div class="form-group">
        <div class="col-md-4">
          <%= f.submit "Regístrame", class: "btn btn-primary" %>
        </div>
      </div>
    </fieldset>
    <% end %>
     
    </div>
</div>
    