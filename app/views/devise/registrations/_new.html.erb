<div id="registration" class="registration-new">
  <div class="title-element">
    <p>¿Te gustaría participar de este gran encuentro?</p> 
    <h1>¡Postúlate!</h1>
  </div>
  <div class="inner-title-element">
    <p>Para hacerlo necesitas</p> 
    <h1>Registrarte</h1>
  </div>
  <div class="content-element container">
    <div class="row align-items-center">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="row">
            <div class="form-group col-xs-12 col-sm-6 col-md-4">
              <label class="col-md-12 control-label" for="textinput">
                <%= f.label :email, "Email" %>
              </label>
              <div class="col-md-12">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control input-md' %>
              </div>
            </div>

            <div class="form-group col-xs-12 col-sm-6 col-md-4">
              <label class="col-md-12 control-label" for="textinput">
                <%= f.label :name, "Nombres" %>
              </label>
              <div class="col-md-12">
                <%= f.text_field :name, class: 'form-control input-md' %>
              </div>
            </div>

            <div class="form-group col-xs-12 col-sm-6 col-md-4">
              <label class="col-md-12 control-label" for="textinput">
                <%= f.label :lastname, "Apellidos" %>
              </label>
              <div class="col-md-12">
                <%= f.text_field :lastname, class: 'form-control input-md' %>
              </div>
            </div>

            <div class="form-group col-xs-12 col-sm-6 col-md-4">
              <label class="col-md-12 control-label" for="textinput">
                <%= f.label :password, "Contraseña" %>
                  <% if @minimum_password_length %>
                <em>(
                  <%= @minimum_password_length %> carácteres mínimo)</em>
                <% end %>
              </label>
              <div class="col-md-12">
                <%= f.password_field :password, class: 'form-control input-md' %>
              </div>
            </div>

            <div class="form-group col-xs-12 col-sm-6 col-md-4">
              <label class="col-md-12 control-label" for="textinput">
                <%= f.label :password_confirmation, "Repite la contraseña" %>
              </label>
              <div class="col-md-12">
                <%= f.password_field :password_confirmation, class: 'form-control input-md' %>
              </div>
            </div>

            <div class="form-group col-xs-12 col-sm-6 col-md-4">
              <label class="col-md-12 control-label" for="textinput">
                <%= f.check_box :terms_of_service %>
                ¿Aceptas nuestros <a href="/terms" target="_blank">términos de servicio </a>y nuestro
                <a href="/privacidad" target="_blank">acuerdo de privacidad</a>?
              </label>
            </div>

            <!-- Button -->
            <div class="form-group text-center col-xs-12 col-sm-12 col-md-12">
              <div class="col-md-12">
                <%= f.submit "Regístrame", class: "btn btn-primary" %>
              </div>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>